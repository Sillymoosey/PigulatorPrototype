
@model Pigulator.Models.Input

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pigulator</title>
</head>
<body>
    <form asp-action="Index" method="post">
        <div class="text-center">
            <h1 class="display-4">Pigulator</h1>
            <p>Click the link <a href="https://www.swfrc.com/">To explore more local food options</a>.</p>
        </div>
        <picture>
            <source srcset="~/css/pigs.jpg">
            <img src="~/css/pigs.jpg" alt="pigs" style="min-width:450px">
        </picture>
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Customers">Number of Customers</label>
            <input asp-for="Customers" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Amount">How many pigs</label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="form-group">
            <label>Whole or half pig</label>
            <select asp-for="WholeorHalf" class="form-control">
                <option value="">Choose an Option</option>
                <option value="true">Whole Pig</option>
                <option value="false">Half Pig</option>
            </select>
        </div>
        <button type="Submit" class="btn btn-primary">Calculate</button>
    </form>
</body>
</html>